{
    "name": "The Ultimate Anti-Productivity Tool",
    "version": "1.0",
    "description": "CS 354 Project",
    "permissions": ["activeTab", "declarativeContent", "storage", "tabs"],
    "background": {
        "scripts": ["container_constructor.js", "jquery/jquery-3.5.1.min.js", "popup/menu.js", "options/options.js", "jquery/jquery-ui.js", "youtube/youtube.js", "twitch/twitch.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup/menu.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
      },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["jquery/jquery-3.5.1.min.js", "popup/menu.js", "options/options.js", "jquery/jquery-ui.js", "container_constructor.js"],
            "css": ["jquery/jquery-ui.css"]
        }
    ],

    "web_accessible_resources": [
        "sites.json",
        "images/*.png"
    ],

    "options_page": "options/options.html",
    "manifest_version": 2
}
